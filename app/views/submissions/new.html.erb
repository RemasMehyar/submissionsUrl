<style>
  .submission-form {
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 8px;
    background-color: #f9f9f9;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    font-weight: bold;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }

  .form-check {
    margin-bottom: 15px;
  }

  .btn-primary {
    display: block;
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: none;
    border-radius: 4px;
    background-color: #007bff;
    color: #fff;
    cursor: pointer;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }
</style>

<%= form_with model: @submission, url: submissions_path, method: :post, class: "submission-form" do |form| %>
  <div class="form-group">
    <%= form.label :name, "Your Name", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter your name" %>
  </div>
  <div class="form-group">
    <%= form.label :github_repo, "GitHub Repository", class: "form-label" %>
    <%= form.text_field :github_repo, class: "form-control", placeholder: "Enter your GitHub repository URL" %>
  </div>
  <div class="form-check">
    <%= form.check_box :is_study_jam, class: "form-check-input" %>
    <%= form.label :is_study_jam, 'This is a Study Jam repository', class: "form-check-label" %>
  </div>
  <div class="form-check">
    <%= form.check_box :is_task_repo, class: "form-check-input" %>
    <%= form.label :is_task_repo, 'This is a Task repository', class: "form-check-label" %>
  </div>
  <%= form.submit "Submit", class: "btn btn-primary btn-block" %>
<% end %>

